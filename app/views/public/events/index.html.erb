<div class="d-flex align-items-center">
  <h2 class="heading col-lg-11 col-md-8">イベント</h2>
  <div class="ml-auto p-2"><%= link_to "新規作成", new_event_path, class: "btn btn-sm btn-primary" %></div>
</div>

<div class="card-list-container row no-gutters mx-sm-auto">
  <% @events.each do |event| %>
    <% if event.is_active %>
      <div class="col-lg-2 col-md-4 px-1 py-3">
        <div class="card shadow-lg rounde">
          <%= link_to event_path(event.id) do %>
            <div class="bg-light p-2">
              画像
            </div>
            <div class="p-2 text-center"><%= event.name %></div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>