<div class="row no-gutters py-4">
  <div class="col-md-4 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded p-4">
    <div class="test-dark py-1 mb-0">
      <%= image_tag current_user.get_user_image, size: "100x100", class: "rounded-circle bg-white border border-dark icon-image" %>
    </div>
    <div class="form-body">
      <div class="py-3 mx-auto text-center h4 font-weight-bold">
        <%= current_user.name %>
      </div>
      <div class="text-left mb-4">
        <%= simple_format(current_user.introduction, sanitize: true) %>
      </div>
      <%= link_to "編集", edit_user_path, class:"btn btn-info col-5" %>
    </div>
  </div>

  <div class="col-md-8 pl-4">
    <p>各種情報</p>
  </div>
</div>