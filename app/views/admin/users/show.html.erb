<h2 class="heading"><%= @user.name %> さんのページ</h2>

<div class="row no-gutters py-4">
  <div class="col-md-4 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded p-4">
    <div class="test-dark py-1 mb-0">
      <%= image_tag @user.get_user_image(100, 100), size: "100x100", class: "rounded-circle bg-white border border-dark icon-image", alt: "ユーザーアイコン" %>
    </div>
    <div class="form-body">
      <div class="py-3 mx-auto text-center h4 font-weight-bold">
        <%= @user.name %>
      </div>
      <div class="mb-4"><%= render "is_active", user: @user %></div>
      <div class="text-left mb-4">
        <%= simple_format(@user.introduction, sanitize: true) %>
      </div>
      <%= link_to "編集", edit_admin_user_path(@user.id), class:"btn btn-info col-5" %>
    </div>

  </div>

  <div class="col-md-8 pl-4">
    <p>各種情報</p>
  </div>
</div>