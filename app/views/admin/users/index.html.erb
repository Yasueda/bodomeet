<div class="d-flex align-items-center">
  <h2 class="heading col-lg-11 col-md-8">ユーザー</h2>
  <div class="ml-auto p-2"><%= link_to "全削除", admin_users_destroy_all_path, method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "退会済みのユーザーを全て削除します。\r\n本当に削除しますか？" } %></div>
</div>

<div class="card-list-container row no-gutters mx-sm-auto">
  <% @users.each do |user| %>
    <div class="col-lg-2 col-md-4 px-1 py-3">
      <div class="card shadow-lg rounde">
        <%= link_to admin_user_path(user.id) do %>
          <div class="bg-light p-2">
            <%= image_tag user.get_user_image(100, 100),size: "100x100", class: "d-block bg-white mx-auto rounded-circle border border-dark icon-image", alt: "ユーザーアイコン" %>
          </div>
          <div class="p-2 text-center"><%= user.name %></div>
        <% end %>
        <%= render "is_active", user: user %>
      </div>
    </div>
  <% end %>
</div>
