<div class="row no-gutters">
  <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
    <h5 class="test-dark bg-light py-4 mb-0">ユーザー情報編集</h5>
    <div class="form-body p-4">
      <div class="mx-auto text-center">
        <p>各項目を入力してください</p>
      </div>

      <% if @user.errors.any? %>
        <ul class="alert alert-danger text-left" role="alert">
          <h6 class="alert-heading">
            <%= @user.errors.count %>件のエラーが発生しました
          </h6>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user, url: admin_user_path, method: :patch, local: true do |f| %>
        <div class="input-group mb-3">
          <div class="input-group-prepend col-2 p-0">
            <span class="input-group-text w-100" aria-hidden="true"><i class="fas fa-image mx-auto"></i></span>
          </div>
          <%= f.file_field :user_image, class: "form-control p-1 align-items-center", accept: "image/*" %>
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend col-2 p-0">
            <span class="input-group-text w-100" aria-hidden="true"><i class="fas fa-user mx-auto"></i></span>
          </div>
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend col-2 p-0">
            <span class="input-group-text w-100" aria-hidden="true"><i class="fas fa-circle-info mx-auto"></i></span>
          </div>
          <%= f.text_area :introduction, class: "form-control", placeholder: "紹介", size: "40x5" %>
        </div>

        <div class="input-group mb-3 d-flex justify-content-around">
          <div>
            <%= f.radio_button :is_active, :true, checked: @user.is_active %>
            <%= f.label :is_active, "有効", value: :true, class: "mr-3" %>
          </div>
          <div>
            <%= f.radio_button :is_active, :false, checked: !@user.is_active %>
            <%= f.label :is_active, "退会", value: :false %>
          </div>
        </div>

        <%= f.submit "更新", class:"btn btn-block btn-success mt-3" %>
      <% end %>

      <%= link_to "削除", admin_user_path(@user.id), method: :delete, class: "btn btn-block btn-danger mt-5", data: { confirm: "本当に削除しますか？" }  %>
    </div>
  </div>
</div>
