<div class="d-flex align-items-center">
  <h2 class="heading col-lg-8 col-md-6"><%= user.name %>さんに関するグループ</h2>
  <% if admin_signed_in? %>
    <div class="ml-auto p-2 m-1"><%= link_to "全削除", destroy_all_admin_groups_path, method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "退会済ユーザーを全て削除します。\r\n本当に削除しますか？" } %></div>
  <% elsif user_signed_in? %>
    <div class="ml-auto p-2 m-1">
      <%= link_to "グループ一覧", groups_path, class: "btn btn-sm btn-success" %>
      <%= link_to "グループ作成", new_group_path, class: "btn btn-sm btn-primary" %>
    </div>
  <% end %>
</div>

<div class="col">
  <div class="d-flex align-items-center mt-4">
    <h4 class="heading col-8 p-0">リーダーグループ（<%= owner_groups.present? ? owner_groups.total_count : 0 %>）</h3>
  </div>
  <%= render "layouts/groups/list", groups: owner_groups %>
  <div class="d-flex justify-content-center">
    <%= paginate owner_groups, param_name: :owner_groups_page %>
  </div>

  <div class="d-flex align-items-center mt-4">
    <h4 class="heading col-8 p-0">参加グループ（<%= member_groups.present? ? member_groups.total_count : 0 %>）</h3>
  </div>
  <%= render "layouts/groups/list", groups: member_groups %>
  <div class="d-flex justify-content-center">
    <%= paginate member_groups, param_name: :member_groups_page %>
  </div
</div>