<div class="col-md-4 col-sm-10 mx-2 mb-5 mx-sm-auto text-center shadow-lg rounded p-4">
  <div class="test-dark py-1 mb-0">
    <%= image_tag user.get_user_image(100, 100), size: "100x100", class: "rounded-circle bg-white border border-dark cover-image", alt: "ユーザーアイコン" %>
  </div>

  <div class="form-body">
    <div class="py-3 mx-auto text-center h4 font-weight-bold">
      <%= user.name %>
    </div>

    <div class="text-left">
      <%= simple_format(user.introduction, sanitize: true) %>
    </div>
  </div>
</div>
