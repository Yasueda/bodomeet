<% unless current_id?(event.user_id) %>
  <% if event.since_event? %>
    <% unless participant_event?(event.id) %>
      <%= link_to "参加する", event_participants_path(event_id: event.id), method: :post, class: "btn btn-sm btn-success" %>
    <% else %>
      <%= link_to "参加取消", event_participant_path(event_id: event.id, id: current_user.id ), method: :delete, class: "btn btn-sm btn-danger" %>
    <% end %>
  <% end %>
<% end %>