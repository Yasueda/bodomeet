<% if flash[:notice] %>
  <p class="alert alert-success flash">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert">
      &times;
    </button>
  </p>
<% elsif flash[:alert] %>
  <p class="alert alert-danger">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert">
      &times;
    </button>
  </p>
<% end %>